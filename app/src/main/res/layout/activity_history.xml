<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg_app"
    android:orientation="vertical"
    tools:context="com.laputa.massager191.activity.HistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <com.laputa.massager191.view.AlphaImageView
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:padding="16dp"
            android:src="@mipmap/ic_action_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="历史"
            android:textColor="#B8B8B8"
            android:textSize="18sp"
            android:textStyle="bold" >
        </TextView>
        <com.laputa.massager191.view.AlphaImageView
            android:id="@+id/img_clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:padding="12dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_action_discard" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#B8B8B8" >
        </View>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <com.laputa.massager191.view.AlphaImageView
            android:id="@+id/img_previous"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:src="@mipmap/ic_previous" />

        <com.laputa.massager191.view.AlphaTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="2015/01"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.laputa.massager191.view.AlphaImageView
            android:id="@+id/img_next"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:src="@mipmap/ic_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context="${relativePackage}.${activityClass}" >

        <TextView
            android:layout_weight="3"
            android:background="@drawable/bg_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="时间"
            android:textColor="#fff"
            android:textStyle="bold" />


        <TextView
            android:background="@drawable/bg_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="模式"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:background="@drawable/bg_head"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="力度"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:background="@drawable/bg_head"
        android:scrollbars="none"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>
